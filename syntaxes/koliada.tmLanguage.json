{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Koliada",
	"patterns": [
		{
			"name": "constant.numeric.koliada",
			"match": "\\b(\\d+)\\b"
		},
		{
			"name": "keyword.control.koliada",
			"match": "\\b(if|else|while|for|in|break|continue|return|function)\\b"
		},
		{
			"name": "keyword.operator.koliada",
			"match": "\\+|-|\\*|/|%|\\^|==|!=|<|>|<=|>=|and|or|not"
		},
		{
			"name": "punctuation.definition.string.begin.koliada",
			"match": "'",
			"captures": {
				"0": {
					"name": "punctuation.definition.string.begin.koliada"
				}
			}
		},
		{
			"name": "punctuation.definition.string.end.koliada",
			"match": "'",
			"captures": {
				"0": {
					"name": "punctuation.definition.string.end.koliada"
				}
			}
		},
		{
			"name": "string.quoted.single.koliada",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.koliada",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "punctuation.definition.comment.koliada",
			"match": "--",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.koliada"
				}
			}
		},
		{
			"name": "comment.line.double-dash.koliada",
			"match": "--.*$"
		}
	],
	"scopeName": "source.koliada"
}